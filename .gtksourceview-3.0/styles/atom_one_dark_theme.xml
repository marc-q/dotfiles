<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="atomonedark" _name="AtomOneDark" version="1.0">
  <author>The Atom Team</author>
  <_description>Color scheme using Atom One Dark color palette</_description>
  
  <color name="mono1"	value="#aab1bf"/>
  <color name="mono2"	value="#818896"/>
  <color name="mono3"	value="#5b6270"/>

  <color name="hue1"	value="#56B5C2"/>
  <color name="hue2"	value="#61afef"/>
  <color name="hue3"	value="#c578dd"/>
  <color name="hue4"	value="#97c279"/>
  <color name="hue5"	value="#df6b75"/>
  <color name="hue52"	value="#be5046"/>
  <color name="hue6"	value="#d19965"/>
  <color name="hue62"	value="#e4bf7a"/>

  <color name="section"	value="#42464E"/>
  <color name="accent"	value="#518bff"/>
  <color name="gutter"	value="#69707D"/>
  <color name="bg"	value="#272b33"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="mono1" background="bg"/>
  <style name="selection"                   foreground="mono1" background="section"/>
  <style name="cursor"                      foreground="accent"/>
  <style name="current-line"                background="bg"/>
  <style name="line-numbers"                foreground="gutter" background="bg"/>
  <style name="background-pattern"          background="bg"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="mono1" background="section"/>
  <style name="bracket-mismatch"            foreground="mono1" background="mono5"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="gutter" background="bg"/>

  <!-- Search Matching -->
  <style name="search-match"                background="section"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="mono3"/>
  <style name="def:shebang"                 foreground="mono3" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:base-n-integer"	    foreground="hue62"/>
  <style name="def:decimal"		    foreground="hue62"/>
  <style name="def:floating-point"	    foreground="hue62"/>
  <style name="def:include"		    foreground="hue4"/>
  <style name="def:constant"                foreground="hue6"/>
  <style name="def:special-char"            foreground="hue1"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="hue62"/>
  <style name="def:function"                foreground="hue2"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="hue3"/>

  <!-- Types -->
  <style name="def:type"                    foreground="hue5"/>

  <!-- Operators -->
  <style name="def:operator"                foreground="hue4"/>

  <!-- Others -->
  <style name="def:keyword"		    foreground="hue3"/>
  <style name="def:preprocessor"            foreground="hue3"/>
  <style name="def:error"                   foreground="hue52" bold="true"/>
  <style name="def:note"                    foreground="hue62" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->
</style-scheme>
